<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YP_desktop.Views.HROfficer.CreateNewFaculty"
			 xmlns:vm="using:YP_desktop.ViewModels.HROfficer"
			 x:DataType="vm:CreateNewFacultyViewModel">
	<StackPanel 
		VerticalAlignment="Center" 
		Margin="40 0 40 0">
		<Border 
			BorderThickness="3" 
			BorderBrush="Beige"
			CornerRadius="20"
			Padding="20 0 20 0"
			BoxShadow="15 15 10 Black">
			<Grid 
				Margin="0 0 0 0" 
				RowDefinitions="*, *, *, *, *, *, *" 
				ColumnDefinitions="*, 2*">
				<Button
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Margin="0 10 0 0"
					Padding="10 10 10 10"
					CornerRadius="20"
					Content="Назад"
					HorizontalContentAlignment="Center"
					FontSize="20"
					Command="{Binding ToAllFaculties}"/>
				<TextBlock 
					TextAlignment="Center"
					Grid.ColumnSpan="2"
					Text="Создание Факультета"
					FontSize="30"
					Margin=" 0 10 0 20"/>
				<TextBlock
					Grid.Row="1"
					Text="Название"
					FontSize="20"
					VerticalAlignment="Center"/>
				<TextBox
					Grid.Row="1"
					Grid.Column="1"
					Text="{Binding NewFaculty.Name}"/>
				<TextBlock
					Grid.Row="2"
					Text="Количество часов"
					FontSize="20"
					VerticalAlignment="Center"
					Margin="0 40 0 0"/>
				<NumericUpDown
				    Value="{Binding NewFaculty.Hours}"
					Grid.Column="1"
					Grid.Row="2"
					Margin="0 40 0 0"
					Increment="1"
					Minimum="0"/>
				<TextBlock
					Grid.Row="3"
					Text="Декан факультета"
					FontSize="20"
					VerticalAlignment="Center"
					Margin="0 40 0 0"/>
				<ComboBox
					Grid.Column="1"
					Grid.Row="3"
					Margin="0 40 0 0"
					Width="400"
					ItemsSource="{Binding AllDeans}"
					SelectedItem="{Binding SelectedDean}">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding FullName}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
				<TextBlock
					Grid.Row="4"
					Text="Тип занятий"
					FontSize="20"
					VerticalAlignment="Center"
					Margin="0 40 0 0"/>
				<ComboBox
					Grid.Column="1"
					Grid.Row="4"
					Margin="0 40 0 0"
					Width="200"
					ItemsSource="{Binding AllTypeOfSubjects}"
					SelectedItem="{Binding SelectedTypeOfSubject}">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
				<Button 
					Grid.Row="5"
					Grid.ColumnSpan="2"
					HorizontalAlignment="Center"
					Margin="0 20 0 10"
					Padding="60 10 60 10"
					CornerRadius="20"
					Content="Создать"
					HorizontalContentAlignment="Center"
					FontSize="20"
					Command="{Binding StartAsyncInsertNewFaculty}"/>
				<TextBlock 
					Grid.Row="6"
					Grid.ColumnSpan="2"
					Text="Факультет сохранен"
					FontSize="20"
					TextAlignment="Center"
					Foreground="LightGreen"
					Margin="0 0 0 10"
					IsVisible="{Binding IsCorrectCreateNewFaculty}"/>
			</Grid>
		</Border>
	</StackPanel>
</UserControl>
