<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YP_desktop.Views.HROfficer.AllFaculty"
			 xmlns:vm="using:YP_desktop.ViewModels.HROfficer"
			 x:DataType="vm:AllFacultyViewModel">
	<UserControl.Styles>
		<Style Selector="TextBlock">
			<Setter Property="TextAlignment" Value="Center"/>
		</Style>
	</UserControl.Styles>
	<Grid RowDefinitions="*, 5*" ShowGridLines="True">
		<StackPanel Orientation="Horizontal">
			<TextBox
				Width="200"
				Margin="30 10 0 10"
				Watermark="Поиск по названию"/>
			<Button
				Margin="30 0 0 0"
				Padding="0 15 0 15"
				Width="200"
				
				Content="Создать факультет"/>
		</StackPanel>
		<ListBox Grid.Row="1" >
			<Border
				BorderBrush="LightBlue"
				BorderThickness="2"
				Padding="10 10 10 10"
				BoxShadow="10 5 10 Black"
				CornerRadius="10">
				<Grid ColumnDefinitions="*, *, *, *">
					<TextBlock
						Text="Название"
					/>
					<TextBlock
						Grid.Column="1"
						Text="Тип"/>
					<TextBlock
						Grid.Column="2"
						Text="Тип предмета"/>
					<TextBlock
						Grid.Column="3"
						Text="Декан"/>
				</Grid>
			</Border>
		</ListBox>
	</Grid>
</UserControl>
